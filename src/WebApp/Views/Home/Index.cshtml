@model WebApp.Models.AccountModel

@{
  ViewData["Title"] = "Home Page";
}

<div class="row">
  <div class="col-md-7">

    <h1>Join B4G</h1>
    <p class="lead">The best way to find your new home.</p>

    <!-- Show steps if user is creating an account -->
    <ol class="steps">
      <li class="current">
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        <strong class="step">Step 1:</strong>
        Create personal account
      </li>
      <li>
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        <strong class="step">Step 2:</strong>
        Enter your address
      </li>
      <li>
        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
        <strong class="step">Step 3:</strong>
        Tailor your experience
      </li>
    </ol>

  </div>
</div>

<div class="row">
  <div class="col-md-4">

    <form asp-action="Join" method="post">
      <h2 class="f2-light">Create your personal account</h2>

      <div asp-validation-summary="All" class="text-danger"></div>

      <div class="form-group">
        <label asp-for="FirstName" class="control-label">First name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
      </div>

      <div class="form-group">
        <label asp-for="LastName" class="control-label">Last name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
      </div>

      <div class="form-group">
        <label asp-for="Email" class="control-label">Email address</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>

      <div class="form-group">
        <label asp-for="Phone" class="control-label">Phone number</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
      </div>

      <p class="tos-info">
        By clicking "Create an account" below, you agree to our
        <a asp-area="" asp-controller="Home" asp-action="Terms">terms of service</a> and
        <a asp-area="" asp-controller="Home" asp-action="Privacy">privacy statement</a>.
        We'll occasionally send you account related emails.
      </p>

      <button type="submit" class="btn btn-success">Create an account</button>
    </form>

  </div>
</div>

@section Scripts {
  @await Html.PartialAsync("_ValidationScriptsPartial")
}